{
	"compilerOptions": {
		"target": "ES2019",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"outDir": "./lib",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"include": [
		"./src/**/*"
	]
}
